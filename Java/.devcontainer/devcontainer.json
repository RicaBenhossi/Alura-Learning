// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.106.0/containers/java-12
{
	"name": "Java 12",
	"dockerFile": "Dockerfile",

	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash",
		"java.home": "/usr/java/openjdk-12",
		"git.ignoreLegacyWarning": true,

		// USER
		"editor.matchBrackets": "near",
		"bracketPairColorizer.showBracketsInGutter": true,
		"workbench.statusBar.visible": true,
		"git.enableSmartCommit": true,
		"git.confirmSync": false,
		"explorer.confirmDragAndDrop": false,
		"breadcrumbs.enabled": true,
		"files.trimTrailingWhitespace": true,
		"files.autoSave": "onFocusChange",
		"files.watcherExclude": {
			"**/.git/*": true,
			"**/node_modules/*/**": true,
			"**/ve.*/*": true
		},
		"editor.renderWhitespace": "boundary",
		"editor.cursorBlinking": "phase",
		"editor.cursorStyle": "line-thin",
		"editor.quickSuggestions": {
			"other": true,
			"comments": false,
			"strings": true
		},
		"editor.acceptSuggestionOnEnter": "on",
		"editor.quickSuggestionsDelay": 500,
		"editor.suggestOnTriggerCharacters": true,
		"editor.tabCompletion": "on",
		"editor.suggest.localityBonus": true,
		"editor.wordBasedSuggestions": true,
		"editor.parameterHints.enabled": false,
		"editor.parameterHints.cycle": false,
		"editor.minimap.enabled": true,
		"editor.minimap.showSlider": "always",
		"workbench.activityBar.visible": true,
		"explorer.confirmDelete": false,
		"terminal.integrated.enableBell": true,
		"terminal.integrated.rendererType":"dom",

		//FILE ACCESS
		"files.exclude": {
			"**/.git": false,
			"**/.svn": true,
			"**/.hg": true,
			"**/CVS": true,
			"**/.DS_Store": true
		},

		// GIT
		"typescript.disableAutomaticTypeAcquisition": true,
		"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
		"editor.suggestSelection": "first",
		"git.autofetch": true,
		"workbench.iconTheme": "vscode-icons",
		"sync.forceDownload": true,
		"extensions.showRecommendationsOnlyOnDemand": true,
		"fileAccess.position": "right",
		"resmon.show.battery": false,
		"resmon.show.cpufreq": false,
		"workbench.colorTheme": "Spacegray Python",
		"window.titleBarStyle": "custom",

		"diffEditor.ignoreTrimWhitespace": false,
		"diffEditor.renderSideBySide": false,
		"window.zoomLevel": -1,
		"editor.fontSize": 13,
		"todo-tree.general.tags": [
			"TODO",
			"FIXME",
			"NOTE",
			"DONE"
		],
		"todo-tree.highlights.customHighlight": {
			"TODO": {
				"icon": "alert",
				"type": "line",
				"foreground": "yellow",
				"background": "yellow",
				"opacity": 30,
				"iconColour": "yellow"
			},
			"FIXME": {
				"icon": "bug",
				"foreground": "red",
				"type": "line",
				"background": "red",
				"opacity": 20,
				"iconColour": "red"
			},
			"NOTE": {
				"icon": "note",
				"foreground": "lightblue",
				"type": "text",
				"background": "",
				"iconColour": "lightblue"
			},
			"DONE": {
				"icon": "check",
				"foreground": "green",
				"type": "line",
				"background": "green",
				"opacity": 10,
				"iconColour": "green"
			}
		},
		"search.searchOnType": true,
		"remote.extensionKind": {
			"ms-azuretools.vscode-docker": "workspace"
        },
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "sqltools.connections": [
            {
                "database": "alura_jpa",
                "driver": "MariaDB",
                "mysqlOptions": {
                    "authProtocol": "default"
                },
                "name": "Alura JPA",
                "port": 3306,
                "previewLimit": 50,
                "server": "localhost",
                "username": "root",
                "password": ""
            }
        ]
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"alefragnani.bookmarks",
		"wmaurer.change-case",
		"redhat.vscode-community-server-connector",
		"vscjava.vscode-java-debug",
		"mycelo.embrace",
		"donjayamanne.git-extension-pack",
		"donjayamanne.githistory",
		"codezombiech.gitignore",
		"eamodio.gitlens",
		"vscjava.vscode-java-dependency",
		"vscjava.vscode-java-pack",
		"vscjava.vscode-java-test",
		"redhat.java",
		"shd101wyy.markdown-preview-enhanced",
		"davidanson.vscode-markdownlint",
		"vscjava.vscode-maven",
		"ziyasal.vscode-open-in-github",
		"alefragnani.read-only-indicator",
		"redhat.vscode-rsp-ui",
		"mutantdino.resourcemonitor",
		"snipsnapdev.snipsnap-vscode",
		"mtxr.sqltools",
		"mtxr.sqltools-driver-mysql",
		"gruntfuggly.todo-tree",
		"visualstudioexptteam.vscodeintellicode",
		"wakatime.vscode-wakatime",
		"redhat.vscode-xml",
		"dotjoshjohnson.xml",
		"alefragnani.project-manager"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8080],

	// Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "ssh-keyscan -H github.com >> ~/.ssh/known_hosts",
    "postCreateCommand": "sudo wget 'https://gist.githubusercontent.com/RicaBenhossi/13a9ce09f06a93e0e16b2ba51137da0e/raw/63bc85ae9d73064c28878eb5ffc5df1bc70f5020/fix_systemctl.sh' && sudo sh fix_systemctl.sh && rm -r fix_systemctl.sh && sudo systemctl start mariadb",

	// Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "benhossi",
	"containerUser": "benhossi"
}
